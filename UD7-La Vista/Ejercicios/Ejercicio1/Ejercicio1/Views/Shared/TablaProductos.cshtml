@model IEnumerable<Ejercicio1.Models.Producto>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = producto.Id })
                    |
                    @Html.ActionLink("Detalles", "Detalles", new { id = producto.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
